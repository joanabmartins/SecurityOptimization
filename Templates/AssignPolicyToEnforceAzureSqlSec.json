{
    "$schema": "https://schema.management.azure.com/schemas/2019-08-01/subscriptionDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "resourceGroupName": {
            "type": "string",
            "metadata": {
                "description": "Name of the central Resource Group Name to store the log collection"
            }
        }
      },
    "variables": {
        "policyAssignmentName": "DeployAdvancedDataSecSQLservers",
        "policyDefID": "6134c3db-786f-471e-87bc-8f479dc890f6"
    },
    "resources": [
            {
                    "type": "Microsoft.Authorization/policyAssignments",
                    "name": "[variables('policyAssignmentName')]",
                    "apiVersion": "2019-09-01",
                    "location": "[deployment().location]",
                    "identity": {
                        "type": "SystemAssigned"
                    },
                    "properties": {
                        "scope": "[concat(subscription().id)]",
                        "policyDefinitionId": "[resourceId('Microsoft.Authorization/policyDefinitions/', variables('policyDefID'))]"
                        }
                    }
    ]
}
