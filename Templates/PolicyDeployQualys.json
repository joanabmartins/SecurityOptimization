 {
            "$schema": "https://schema.management.azure.com/schemas/2019-08-01/subscriptionDeploymentTemplate.json#",
            "contentVersion": "1.0.0.0",
            "parameters": {
            },
            "variables": {
                "qualysPolicyID": "13ce0167-8ca6-4048-8e6b-f996402e3c1b",
                "policyAssignmentName": "deployQualysPolicyAssignment"
            },
            "resources": [
                {
                    "type": "Microsoft.Authorization/policyAssignments",
                    "name": "[variables('policyAssignmentName')]",
                    "apiVersion": "2019-09-01",
                    "location": "[deployment().location]",
                    "identity": {
                        "type": "SystemAssigned"
                    },
                    "properties": {
                        "scope": "[concat(subscription().id)]",
                        "policyDefinitionId": "[resourceId('Microsoft.Authorization/policyDefinitions/', variables('qualysPolicyID'))]"
                    }
                }
            ]
        }