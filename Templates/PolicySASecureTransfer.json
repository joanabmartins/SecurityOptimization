{
    "$schema": "https://schema.management.azure.com/schemas/2019-08-01/subscriptionDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      },
    "variables": {
        "policyAssignmentName": "deploySASecureTransferPolicyAssignment",
        "policyDefName": "deploySASecureTransfer"
    },
    "resources": [
        {
            "type": "Microsoft.Authorization/policyDefinitions",
            "name": "[variables('policyDefName')]",
            "apiVersion": "2019-09-01",
            "properties": {
        "displayName": "Enforce secure transfer to storage account",
        "mode": "Indexed",
        "description": "This policy automatically enforces secure transfer to storage account",
        "metadata": {
            "category": "Security Center"
        },
        "parameters": {
            },
        "policyRule": {
            "if": {
                "allof": [
                    {
                      "field": "type",
                      "equals": "Microsoft.Storage/storageAccounts"
                    },
                    {
                      "not": {
                        "field": "Microsoft.Storage/storageAccounts/supportsHttpsTrafficOnly",
                        "equals": "true"
                      }
                    }
                  ]
                },
                "then": {
                    "effect": "DeployIfNotExists",
                    "details": {
                      "type": "Microsoft.Storage/storageAccounts",
                      "existenceCondition": {
                        "field": "Microsoft.Storage/storageAccounts/supportsHttpsTrafficOnly",
                        "equals": "true"
                      },
                      "roleDefinitionIds": [
                        "/providers/microsoft.authorization/roleDefinitions/b24988ac-6180-42a0-ab88-20f7382dd24c"
                      ],
                      "deployment": {
                        "properties": {
                          "mode": "incremental",
                          "template": {
                            "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                            "contentVersion": "1.0.0.0",
                            "parameters": {
                              "storageAccountName": {
                                "type": "string"
                              },
                              "storageAccountLocation": {
                                "type": "string"
                              }
                            },
                            "variables": {},
                            "resources": [
                              {
                                "name": "[[parameters('storageAccountName')]",
                                "location": "[[parameters('storageAccountLocation')]",
                                "type": "Microsoft.Storage/storageAccounts",
                                "apiVersion": "2018-11-01,",
                                "properties": {
                                  "supportsHttpsTrafficOnly": "true"
                                }
                              }
                            ]
                          },
                          "parameters": {
                            "storageAccountName": {
                              "value": "[[field('name')]"
                            },
                            "storageAccountLocation": {
                              "value": "[[field('location')]"
                            }
                          }
                        }
                      }
                    }
                  }
                }
                }
            },
            {
                    "type": "Microsoft.Authorization/policyAssignments",
                    "name": "[variables('policyAssignmentName')]",
                    "apiVersion": "2019-09-01",
                    "dependsOn": [
                        "[resourceId('Microsoft.Authorization/policyDefinitions/', variables('policyDefName'))]"
                    ],
                    "location": "[deployment().location]",
                    "identity": {
                        "type": "SystemAssigned"
                    },
                    "properties": {
                        "scope": "[concat(subscription().id)]",
                        "policyDefinitionId": "[resourceId('Microsoft.Authorization/policyDefinitions/', variables('policyDefName'))]",
                        "parameters": {
                        }
                    }
 }
    ]
}