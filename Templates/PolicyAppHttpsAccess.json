{
    "$schema": "https://schema.management.azure.com/schemas/2019-08-01/subscriptionDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      },
    "variables": {
        "policyAssignmentName": "EnforceHttpsFunctionAppPolicyAssignment",
        "policyDefName": "EnforceHttpsFunctionApp",
        "displayName": "Enforce https access for Function Apps"
    },
    "resources": [
        {
            "type": "Microsoft.Authorization/policyDefinitions",
            "name": "[variables('policyDefName')]",
            "apiVersion": "2019-09-01",
            "properties": {
        "displayName": "[variables('displayName')]",
        "mode": "Indexed",
        "description": "[variables('displayName')]",
        "metadata": {
            "category": "Security Center"
        },
        "parameters": {
            },
        "policyRule": {
            "if": {
              "allof": [
                {
                  "field": "type",
                  "equals": "Microsoft.Web/sites"
                },
                {
                  "not": {
                    "field": "Microsoft.Web/sites/httpsOnly",
                    "equals": "true"
                  }
                }
              ]
            },
            "then": {
              "effect": "DeployIfNotExists",
              "details": {
                "type": "Microsoft.Web/sites",
                "existenceCondition": {
                  "field": "Microsoft.Web/sites/httpsOnly",
                  "equals": "true"
                },
                "roleDefinitionIds": [
                  "/providers/microsoft.authorization/roleDefinitions/b24988ac-6180-42a0-ab88-20f7382dd24c"
                ],
                "deployment": {
                  "properties": {
                    "mode": "incremental",
                    "template": {
                      "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                      "contentVersion": "1.0.0.0",
                      "parameters": {
                        "websiteName": {
                          "type": "string"
                        },
                        "location": {
                          "type": "string"
                        }
                      },
                      "variables": {},
                      "resources": [
                        {
                          "name": "[[parameters('websiteName')]",
                          "location": "[[parameters('location')]",
                          "type": "Microsoft.Web/sites",
                          "apiVersion": "2018-11-01",
                          "properties": {
                            "httpsOnly": "true"
                          }
                        }
                      ]
                    },
                    "parameters": {
                      "websiteName": {
                        "value": "[[field('name')]"
                      },
                      "location": {
                        "value": "[[field('location')]"
                      }
                    }
                  }
                }
              }
            }
          }
                    }
                  },
            {
                    "type": "Microsoft.Authorization/policyAssignments",
                    "name": "[variables('policyAssignmentName')]",
                    "apiVersion": "2019-09-01",
                    "dependsOn": [
                        "[resourceId('Microsoft.Authorization/policyDefinitions/', variables('policyDefName'))]"
                    ],
                    "location": "[deployment().location]",
                    "identity": {
                        "type": "SystemAssigned"
                    },
                    "properties": {
                        "scope": "[concat(subscription().id)]",
                        "policyDefinitionId": "[resourceId('Microsoft.Authorization/policyDefinitions/', variables('policyDefName'))]",
                        "parameters": {
                        }
                    }
 }
    ]
}